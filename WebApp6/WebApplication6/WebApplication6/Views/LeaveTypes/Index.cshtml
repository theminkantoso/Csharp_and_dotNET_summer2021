@model IEnumerable<WebApplication6.Models.LeaveTypeViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Leave Types</h1>
<hr />

<p>
    <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> Create New</a>
</p>
<table id="tblData" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultDays)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DefaultDays)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id"> <i class="fas fa-edit"></i></a>
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id"> <i class="fas fa-info-circle"></i></a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete?')"> <i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script>

    </script>
}
